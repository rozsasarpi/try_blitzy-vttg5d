max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.pyo,
    *.pyd,
    .pytest_cache,
    .coverage,
    htmlcov,
    tests/fixtures/*,
    .venv,
    venv
ignore = E203,W503
per-file-ignores =
    __init__.py:F401
    tests/*:F811,F401
max-complexity = 10
select = E,F,W,C90,B
extend-ignore = B950