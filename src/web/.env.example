# ELECTRICITY MARKET PRICE FORECASTING SYSTEM - WEB VISUALIZATION
# Environment Configuration Example
# ====================================================================
# Copy this file to .env and modify the values as needed
# All variables should be set before starting the application

# ====================================================================
# Server Configuration
# ====================================================================
# Controls the server behavior and logging

# Enable debug mode for development (True/False)
DEBUG=False

# Application environment (development/staging/production)
ENVIRONMENT=development

# Logging level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Host IP address to bind the server to (0.0.0.0 for all interfaces)
SERVER_HOST=0.0.0.0

# Port to run the Dash server on
SERVER_PORT=8050

# Comma-separated list of allowed host headers
ALLOWED_HOSTS=localhost,127.0.0.1

# ====================================================================
# Security Configuration
# ====================================================================
# Security-related settings for the application

# Secret key for securing session data
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Enable authentication for the dashboard (True/False)
ENABLE_AUTH=False

# Admin username (only used if ENABLE_AUTH=True)
ADMIN_USERNAME=admin

# Admin password (only used if ENABLE_AUTH=True)
ADMIN_PASSWORD=change-this-in-production

# Token expiry time in seconds (1 hour default)
TOKEN_EXPIRY_SECONDS=3600

# ====================================================================
# API Configuration
# ====================================================================
# Settings for connecting to the forecasting API

# Base URL for the forecast API
API_BASE_URL=http://localhost:8000/api

# Timeout for forecast API requests in seconds
FORECAST_API_TIMEOUT=30

# ====================================================================
# UI Configuration
# ====================================================================
# User interface configuration settings

# Enable responsive design for different screen sizes (True/False)
ENABLE_RESPONSIVE_UI=True

# Auto-refresh interval for dashboard data in seconds (5 minutes default)
DASHBOARD_REFRESH_INTERVAL_SECONDS=300

# Enable usage analytics collection (True/False)
ENABLE_ANALYTICS=False

# ====================================================================
# Caching Configuration
# ====================================================================
# Settings for data caching to improve performance

# Enable data caching (True/False)
CACHE_ENABLED=True

# Cache timeout in seconds (5 minutes default)
CACHE_TIMEOUT=300